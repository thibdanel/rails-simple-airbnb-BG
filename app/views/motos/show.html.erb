    <h1><%= @moto.brand %> <strong><%= @moto.power %> Chevaux</strong> !</h1>
  </div>
</div>


<div class="container">
  <div class="card-trip">
    <%= cl_image_tag @moto.photo.key, height: 300, width: 400, crop: :fill%>
