</div>


<div class="container mt-5">
  <h2>Offers for your next trip</h2>
  <div class="row mt-4">
    <% @motos.take(3).each do |moto| %>
      <div class="col-4">
        <div class="card-moto">
          <img src="https://media.motoservices.com/media/cache/home_slider_lg/media/gallery/18511/CFMOTO-700-CL-X-SPORT_2022-46.jpg" />
          <div class="card-moto-info">
            <p> <%= link_to moto.name, moto_path(moto), :class => "name" %> </p>
            <p id="brand"> <%= moto.brand %> </p>
            <p id="address"> <%= moto.address %> </p>
            <p id="price"> <%= moto.price%> â‚¬</p>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

<div class="container mt-5">
  <p> <%= link_to 'New moto', new_moto_path, :class => "new-moto" %> </p>
</div>

